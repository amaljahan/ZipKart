<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Users Management</title>
  <link rel="stylesheet" href="/css/admin/dashboard.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <style>
    body {
      display: flex;
      margin: 0;
      font-family: Arial, sans-serif;
    }

    .sidebar {
      background-color: #1f2937;
      color: #fff;
      padding: 20px;
      box-sizing: border-box;
      width: 240px;
      transition: width 0.3s ease;
    }

    .sidebar .logo {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 20px;
    }

    .sidebar .menu-item {
      margin-bottom: 10px;
    }

    .sidebar .menu-item a {
      color: #fff;
      text-decoration: none;
      display: flex;
      align-items: center;
    }

    .sidebar .menu-item.active a {
      font-weight: bold;
    }

    .sidebar .menu-item i {
      margin-right: 10px;
    }

    .main-content {
      flex-grow: 1;
      padding: 20px;
      padding-bottom: 60px; /* Space for fixed pagination */
      overflow-x: auto;
    }

    .header .title {
      font-size: 1.5rem;
      margin-bottom: 20px;
    }

    .search-bar {
      margin-bottom: 20px;
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    .search-bar input {
      flex-grow: 1;
      padding: 8px;
    }

    .search-bar button {
      padding: 8px 15px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    table th, table td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    table th {
      background-color: #1f2937;
      color: #fff;
    }

    .btn-block, .btn-unblock {
      padding: 5px 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    .btn-block {
      background-color: #dc3545;
      color: #fff;
    }

    .btn-unblock {
      background-color: #28a745;
      color: #fff;
    }

    .pagination {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      display: flex;
      justify-content: center;
      margin: 0;
      padding: 10px 0;
      background-color: #f8f9fa;
      box-shadow: 0 -2px 5px rgba(0,0,0,0.1);
      /* z-index: 1000; */
    }

    .pagination a {
      padding: 8px 12px;
      text-decoration: none;
      border: 1px solid #ddd;
      color: #333;
    }

    .pagination a.active {
      background-color: #1f2937;
      color: white;
    }

    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        padding: 10px;
      }

      .sidebar .logo {
        margin-bottom: 0;
      }

      .sidebar .menu-item {
        display: inline-block;
        margin-right: 10px;
      }

      .main-content {
        margin-left: 0;
        padding: 15px;
      }

      .header .title {
        font-size: 1.2rem;
        margin-bottom: 15px;
      }

      .search-bar {
        flex-direction: column;
      }

      table th, table td {
        font-size: 0.9rem;
        padding: 6px;
      }

      table {
        display: block;
        overflow-x: auto;
      }

      .pagination {
        flex-wrap: wrap;
        padding: 8px 0;
      }

      .pagination a {
        padding: 6px 10px;
        font-size: 0.9rem;
      }
    }

    @media (max-width: 480px) {
      .header .title {
        font-size: 1.1rem;
        margin-bottom: 10px;
      }

      table th, table td {
        font-size: 0.8rem;
        padding: 4px;
      }

      .pagination {
        padding: 6px 0;
      }

      .pagination a {
        padding: 4px 8px;
        font-size: 0.8rem;
      }
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <aside class="sidebar">
    <div class="logo">
      <h1><span class="brand">Zip</span>Kart</h1>
    </div>
    <nav class="menu">
      <ul>
        <li class="menu-item"><a href="/zipkart/admin/dashboard"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a></li>
        <li class="menu-item active"><a href="/zipkart/admin/users/view-users"><i class="fas fa-users"></i> <span>Users</span></a></li>
        <li class="menu-item"><a href="/zipkart/admin/categories/view-category"><i class="fas fa-list"></i> <span>Categories</span></a></li>
        <li class="menu-item"><a href="/zipkart/admin/products/view-products"><i class="fas fa-box"></i> <span>Products</span></a></li>
        <li class="menu-item"><a href="/zipkart/admin/orders/view-orders"><i class="fas fa-shopping-cart"></i> <span>Orders</span></a></li>
        <li class="menu-item"><a href="#"><i class="fas fa-cog"></i> <span>Settings</span></a></li>
      </ul>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="main-content">
    <!-- Header -->
    <header class="header">
      <div class="title">Users Management</div>
    </header>

    <!-- Search Bar -->
    <div class="search-bar">
      <form action="/zipkart/admin/users/view-users/search-user" method="get">
        <input type="text" placeholder="Search users..." id="searchInput" name="searchInput">
        <button type="submit">Search</button>
      </form>
      <%if(message){%>
        <p style="color: red;"><%=message %></p>
      <%}%>
    </div>

    <!-- Users Table -->
    <section>
      <table>
        <thead>
          <tr>
            <th>Si.No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Google User</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="usersTable">
          <% users.forEach((user, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= user.firstName + " " + user.lastName %></td>
              <td><%= user.email %></td>
              <td>
                <% if (user.googleId) { %>
                  Yes
                <% } else { %>
                  No
                <% } %>
              </td>
              <td>
                <% if (user.isBlocked) { %>
                  Blocked
                <% } else { %>
                  Active
                <% } %>
              </td>
              <td>
                <% if (user.isBlocked) { %>
                  <button class="btn-unblock" onclick="toggleStatus('<%= user._id %>', false, 'Active', this)">Unblock</button>
                <% } else { %>
                  <button class="btn-block" onclick="toggleStatus('<%= user._id %>', true, 'Blocked', this)">Block</button>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="pagination">
        <% if (hasPrevPage) { %>
          <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>" class="rounded">&laquo;</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="?page=<%= i %>&limit=<%= limit %>" class="rounded <%= currentPage === i ? 'active' : '' %>"><%= i %></a>
        <% } %>
        
        <% if (hasNextPage) { %>
          <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>" class="rounded">&raquo;</a>
        <% } %>
      </div>
    </section>
  </main>

  <script>
    function toggleStatus(userId, isBlocked, newStatus, button) {
      const row = button.closest('tr');
      const statusCell = row.querySelector('td:nth-child(5)');

      axios.post('block-unblock', { userId, isBlocked })
        .then(response => {
          if (response.data.success) {
            if (isBlocked) {
              statusCell.textContent = 'Blocked';
              button.textContent = 'Unblock';
              button.classList.remove('btn-block');
              button.classList.add('btn-unblock');
              button.setAttribute('onclick', `toggleStatus('${userId}', false, 'Active', this)`);
            } else {
              statusCell.textContent = 'Active';
              button.textContent = 'Block';
              button.classList.remove('btn-unblock');
              button.classList.add('btn-block');
              button.setAttribute('onclick', `toggleStatus('${userId}', true, 'Blocked', this)`);
            }
          } else {
            alert('Failed to update status');
          }
        })
        .catch(err => {
          console.error(err);
          alert('Error updating user status');
        });
    }
  </script>
</body>
</html>