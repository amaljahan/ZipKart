        </div>
        <div class="stat-box">
          <h3>Visitors</h3>
          <div class="chart-placeholder">[Visitors Chart]</div>
        </div>
      </div>
    </section>
  </main>

  <!-- Chart Script -->
  <script>
    const ctx = document.getElementById('salesChart').getContext('2d');
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
        datasets: [
          {
            label: 'Revenue',
            data: [12000, 15000, 14000, 18000, 17000, 20000, 22000, 19000, 25000, 24000, 21000, 23000],
            backgroundColor: '#2563eb',
          },
          {
            label: 'Orders',
            data: [300, 400, 350, 450, 400, 500, 550, 480, 600, 580, 520, 560],
            backgroundColor: '#cbd5e1',
          },
        ],
      },
      options: {
        responsive: true,
        plugins: {
          legend: { position: 'top' },
        },
        scales: {
          y: { beginAtZero: true },
        },
      },
    });
  </script>

  <!-- for logout button alerts -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
        const logoutButton = document.querySelector('.logout');
        
        logoutButton.addEventListener('click', async function(e) {
            e.preventDefault();
            
            // Show confirmation dialog
            const result = await Swal.fire({
                title: 'Are you sure?',
                text: "You will be logged out of the system",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, logout'
            });
            
            // If user confirms logout
            if (result.isConfirmed) {
                try {
                    // Make logout request to backend
                    const response = await axios.post('/zipkart/admin/logout');
                    
                    // Show success message
                    await Swal.fire({
                        title: 'Success!',
                        text: response.data.message || 'Logged out successfully',
                        icon: 'success',
                        timer: 1500,
                        showConfirmButton: false
                    });
                    
                    // Redirect to login page
                    window.location.href = '/zipkart/admin/login';
                    
                } catch (error) {
                    // Handle errors
                    Swal.fire({
                        title: 'Error!',
                        text: error.response?.data?.message || 'Something went wrong',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                }
            }
        });
    });
    </script>
</body>
