        <p class="growth positive">+5.4%</p>
      </div>
    </section>

    <!-- Sales Chart -->
    <section class="chart-section">
      <canvas id="salesChart"></canvas>
    </section>

    <!-- Dashboard -->
    <section class="dashboard">
      <!-- Dashboard Header -->
      

      <!-- Metrics Cards -->
      <div class="cards">
        <div class="card metric-card">
          <h3>$120,245</h3>
          <p>Total Sales</p>
        </div>
        <div class="card metric-card">
          <h3>$95,652</h3>
